---
import { AUTHOR_NAME } from '../consts';
const today = new Date();
---

<footer class="footer">
	<div class="footer__inner">
		<div class="footer__left">
			<div class="footer__title">&copy; {today.getFullYear()} {AUTHOR_NAME}</div>
			<div class="footer__sub">Paper Atelier · Astro · GitHub Pages</div>
		</div>
		<div class="footer__right">
			<a href="/rss.xml">RSS</a>
			<a href="/sitemap-index.xml">Sitemap</a>
		</div>
	</div>
</footer>

<style>
	.footer {
		margin-top: 3.25rem;
		border-top: 1px solid rgba(16, 18, 22, 0.12);
		background: rgba(255, 255, 255, 0.55);
		backdrop-filter: blur(8px);
	}
	.footer__inner {
		max-width: var(--maxw);
		margin: 0 auto;
		padding: 1.8rem 1.1rem 3.8rem;
		display: flex;
		align-items: flex-end;
		justify-content: space-between;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.footer__title { font-weight: 900; letter-spacing: -0.01em; }
	.footer__sub { opacity: 0.75; font-size: 0.92rem; margin-top: 0.25rem; color: rgba(var(--muted), 1); }
	.footer__right {
		display: flex;
		gap: 0.8rem;
		flex-wrap: wrap;
		opacity: 0.9;
		font-size: 0.95rem;
	}
	.footer__right a { background-image: none; color: rgba(var(--muted), 1); }
	.footer__right a:hover { color: rgba(var(--ink), 0.96); }
</style>
