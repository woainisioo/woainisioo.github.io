---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>{SITE_TITLE}</h1>
			<p style="opacity:0.9">{SITE_DESCRIPTION}</p>
			
			<ul>
				<li><a href="/blog">查看最新文章</a></li>
				<li><a href="/tags">按标签浏览</a></li>
				<li><a href="/search">站内搜索</a></li>
				<li><a href="/about">关于我</a></li>
			</ul>

			<hr style="margin:2rem 0;opacity:0.2" />
			<p style="opacity:0.75;font-size:0.95em">
				提示：写文章请到 <code>src/content/blog/</code> 新建 Markdown 文件。
			</p>
		</main>
		<Footer />
	</body>
</html>
